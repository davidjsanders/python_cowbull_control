#!/usr/bin/env bash
#
# ERROR CHECKING *BEFORE* EXECUTION STARTS
#
#
echo ""
echo "Deploy CowBull game to Kubernetes cluster run locally on Minikube"
echo "================================================================="
echo ""
echo "|------------------------------------|--------| "
echo "| Validate environment               | Status |"
echo "|------------------------------------|--------| "

# Check variables are defined
echo -n "| Variables have been defined okay   | "
if [[ $GROUP"X" == "X"  ]];
then
    echo " FAIL  |"
    echo
    echo "Error; the variables are not set. This script must ONLY be called"
    echo "       using the deploy script. Please run deploy in the root of"
    echo "       the python_cowbull_control installation directory." 
    echo
    return 1
fi
echo "  ok   |"

gcloudpath=$(which minikube)"x"
echo -n "| Minikube is installed              | "
if [[ $gcloudpath == "x" ]]
then
    echo " FAIL  |"
    echo ""
    echo "Error; minikube must be installed. "
    echo "See https://kubernetes.io/docs/tasks/tools/install-minikube/"
    echo ""
    return 1
fi
echo "  ok   |"

echo -n "| Minikube current status            | "
minikubeStatus=$(minikube status --format "{{.MinikubeStatus}}" | tr [A-Z] [a-z])
if [[ $minikubeStatus != "x" ]]
then
    echo "started|"
else
    echo "stopped|"
fi

echo "|------------------------------------|--------| "
echo ""
echo ""
echo "Configuration will be set as follows:"
echo "-------------------------------------"
echo ""
echo "Minikube RAM  :   "$MINIRAM
echo "Minikube CPUs :   "$MINICPU
echo ""

if [[ $DRYRUN == 1  ]]
then
    echo
    echo "Dry Run - No implementation"
    echo
fi

echo ""
echo "1. Start minikube"
echo ""
echo "minikube --memory "$MINIRAM" --cpus "$MINICPU
if [[ $DRYRUN != 1  ]]
then
    if [[ $minikubeStatus == "running" ]]
    then
        echo "Already running. Will not restart."
    else
        minikube start --memory $MINIRAM --cpus $MINICPU
    fi
else
    echo "... dry run only"
fi

echo ""
echo "2. Get minikube credentials to configure kubectl"
echo ""
echo -n "kubectl config use-context minikube"
if [[ $DRYRUN != 1  ]]
then
    kubectl config use-context minikube
    echo
else
    echo "... dry run only"
fi

echo ""
echo "Done."
echo ""
